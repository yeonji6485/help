{
  "manifest_version": 3,
  "name": "Zendesk Stealth Helper",
  "version": "1.0",
  "description": "젠데스크 반복 노동 단축 및 은신 툴",
  "permissions": ["storage", "clipboardWrite"],
  "content_scripts": [
    {
      "matches": ["https://*.zendesk.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}